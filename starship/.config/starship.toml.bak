user_color="#2F555B"

format = """
[](#2F555B)\
$os\
$username\
[](bg:#94cf96 fg:#2F555B)\
$directory\
[](fg:#94cf96 bg:#7644c3)\
$git_branch\
$git_status\
$git_state\
[](fg:#7644c3 bg:#d28df7)\
$c\
$elixir\
$elm\
$golang\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
$scala\
$dotnet\
[](fg:#d28df7)\
$docker_context\
$fill\
$time\
$line_break\
$character
"""

[fill]
symbol = ' '
style = 'bold green'

[character]
success_symbol = '[❯](bold fg:#d28df7)'
error_symbol = '[❯](bold fg:#DA627D)'

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like   or disable this
# and use the os module below
[username]
show_always = true
style_user = "bg:#2F555B fg:white"
style_root = "bg:#2F555B"
format = '[$user ]($style)'
disabled = false

# An alternative to the username module which displays a symbol that
# represents the current operating system
[os]
style = "bg:#3d8c40  fg:#1d1f21"
disabled = true # Disabled by default

[directory]
style = "bg:#94cf96 fg:#1d1f21"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = " "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = "  "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important  " = "  "

[c]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[docker_context]
symbol = " "
style = "bg:#06969A fg:#1d1f21"
format = '[ $symbol $context ]($style) $path'

[elixir]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[elm]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[git_branch]
symbol = ""
style = "bg:#7644c3 fg:white"
format = '[ $symbol $branch ]($style)'

[git_status]
style = "bg:#7644c3 fg:white"
format = '[$all_status$ahead_behind ]($style)'

[golang]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[haskell]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[java]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[julia]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[nodejs]
symbol = ""
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[nim]
symbol = " "
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[rust]
symbol = ""
style = "bg:#d28df7 fg:#1d1f21"
format = '[ $symbol ($version) ]($style)'

[scala]
symbol = " "
format = '[ $symbol ($version) ]($style)'

[dotnet]
style = "bg:#d28df7 fg:#1d1f21"
symbol= " "
format = '[$symbol ($version) 󰓾 ($tfm)]($style)'
heuristic = true

[git_state]
style = "bg:#FCA17D fg:#1d1f21"
format = '[\($state( $progress_current of $progress_total)\)]($style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "fg:#c5c8c6"
format = '[ $time ]($style)'
